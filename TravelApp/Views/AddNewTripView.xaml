             xmlns:local="clr-namespace:TravelApp.Views"
             xmlns:vm="clr-namespace:TravelApp.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Name="NewTripWindow"
             d:DataContext="{d:DesignInstance vm:AddNewTripViewModel}">
